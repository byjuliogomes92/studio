
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isWorkspaceMember(workspaceId) {
      return exists(/databases/$(database)/documents/workspaceMembers/$(request.auth.uid)_$(workspaceId));
    }

    match /projects/{projectId} {
      allow read, create, update, delete: if isWorkspaceMember(resource.data.workspaceId);
    }

    match /templates/{templateId} {
      allow read, create, update, delete: if isWorkspace's Member(resource.data.workspaceId);
    }
    
    match /brands/{brandId} {
      allow read, create, update, delete: if isWorkspaceMember(resource.data.workspaceId);
    }

    match /pages_drafts/{pageId} {
       allow read, create, update, delete: if isWorkspaceMember(resource.data.workspaceId);
    }

    match /pages_published/{pageId} {
       // Published pages can be read by anyone for viewing
       allow get: if true;
       // But only workspace members can update/publish them
       allow update, delete, create: if isWorkspaceMember(resource.data.workspaceId);
    }
    
    match /media/{mediaId} {
      allow read, create, delete: if isWorkspaceMember(resource.data.workspaceId);
    }
    
    match /pageViews/{viewId} {
      allow create: if true; // Anyone can trigger a page view log
      allow read: if isWorkspaceMember(resource.data.workspaceId);
    }
    
    match /formSubmissions/{submissionId} {
       allow create: if true; // Anyone can submit a form
       allow read: if isWorkspaceMember(resource.data.workspaceId);
    }

    match /userProgress/{userId} {
      allow read, create, update: if request.auth.uid == userId;
    }

    match /workspaces/{workspaceId} {
      allow read, update: if isWorkspaceMember(workspaceId);
      allow create: if request.auth.uid != null;
    }
    
    match /workspaceMembers/{membershipId} {
       allow read: if isWorkspaceMember(resource.data.workspaceId);
       // Only owners can create/delete memberships (for now)
       allow create, delete: if get(/databases/$(database)/documents/workspaces/$(resource.data.workspaceId)).data.ownerId == request.auth.uid;
    }
  }
}
