rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /projects/{projectId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    match /pages/{pageId} {
      // A leitura pública é tratada pela rota da API que verifica as datas de publicação/expiração.
      allow read: if true; 
      allow write: if isOwner(request.resource.data.userId);
    }
    
    match /templates/{templateId} {
      allow read: if resource.data.isDefault == true || isOwner(resource.data.createdBy);
      allow create: if isOwner(request.resource.data.createdBy);
      allow update, delete: if isOwner(resource.data.createdBy);
    }

    match /userProgress/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /pageViews/{viewId} {
      // Permite que qualquer um crie uma visualização de página (acionado pela rota pública da API).
      allow create: if true;
      
      // Permite que um usuário leia as visualizações de página apenas se ele for o proprietário da página referenciada.
      allow read: if request.auth != null && get(/databases/$(database)/documents/pages/$(resource.data.pageId)).data.userId == request.auth.uid;
    }

    match /formSubmissions/{submissionId} {
      // Permite que qualquer um crie uma submissão de formulário (acionado pela rota pública da API).
      allow create: if true;
      allow read, update, delete: if false; // Protect PII
    }
  }
}
