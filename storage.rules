rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que usuários autenticados leiam e escrevam arquivos
    // em um caminho que corresponda ao seu próprio ID de usuário.
    // Ex: /workspace_id/user_id_123/minha_imagem.png
    match /{workspaceId}/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
